<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruongHoc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TruongHoc.Actionbar" />

    <style name="Theme.TruongHoc.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.TruongHoc.Text" />

    <style name="Theme.TruongHoc.Line">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="Theme.TruongHoc.Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Theme.TruongHoc.Actionbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.TruongHoc.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:paddingStart">@dimen/offset_horizontal</item>
        <item name="android:paddingEnd">@dimen/offset_horizontal</item>
    </style>

    <style name="Theme.TruongHoc.Text.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>